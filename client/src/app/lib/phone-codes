// src/app/lib/phone-codes.ts
export type CountryDialOption = { iso2: string; name: string; dial: string };

export function flagEmoji(iso2: string) {
  const code = iso2.toUpperCase();
  if (!/^[A-Z]{2}$/.test(code)) return "üè≥Ô∏è";
  return String.fromCodePoint(
    127397 + code.charCodeAt(0),
    127397 + code.charCodeAt(1)
  );
}

